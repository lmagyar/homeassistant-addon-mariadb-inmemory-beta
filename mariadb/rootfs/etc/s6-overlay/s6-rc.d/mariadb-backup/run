#!/command/with-contenv bashio
# ==============================================================================
# Start MariaDB-backup service
# ==============================================================================
ADDON_EVENTS=$(</etc/ADDON_EVENTS)

s6-mkfifodir ${ADDON_EVENTS}

while :
do
    s6-ftrig-wait ${ADDON_EVENTS} "e" > /dev/null
    export-homeassistant-database
    s6-ftrig-notify ${ADDON_EVENTS} "E"
done
