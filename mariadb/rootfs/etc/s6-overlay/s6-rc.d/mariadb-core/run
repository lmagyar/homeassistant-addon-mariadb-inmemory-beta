#!/command/with-contenv bashio
# ==============================================================================
# Start MariaDB service
# ==============================================================================
MARIADB_DATA=$(</etc/MARIADB_DATA)

# Start mariadb
bashio::log.info "Starting MariaDB..."
mysqld_safe --datadir="${MARIADB_DATA}" --user=root < /dev/null

bashio::log.info "MariaDB stopped #2"
