#!/command/with-contenv bashio
# ==============================================================================
# Post-start finalization of  MariaDB service
# ==============================================================================

# Send service information to the Supervisor
if bashio::services.delete "mysql"; then
    bashio::log.info "Successfully deleted service information from Home Assistant."
else
    bashio::log.warning "Service message to Home Assistant failed!"
fi

# Export database content
export-homeassistant-database

# Stop mariadb
bashio::log.info "Stopping MariaDB..."
touch /etc/MARIADB_SHUTDOWN
mysqladmin --user=root shutdown
